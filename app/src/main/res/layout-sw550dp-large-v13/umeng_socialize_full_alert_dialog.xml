<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:mySwitch="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/umeng_socialize_title" layout="@layout/umeng_socialize_titile_bar"/>
    <FrameLayout android:background="@color/umeng_socialize_list_item_bgcolor" android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:layout_gravity="center" android:id="@+id/umeng_xp_ScrollView" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:textColor="#ff84898f" android:id="@+id/umeng_socialize_first_area_title" android:paddingLeft="26dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="26dp" android:text="分享到"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/umeng_socialize_first_area" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_below="@+id/umeng_socialize_first_area_title" android:layout_centerInParent="true"/>
                <TextView android:textSize="16sp" android:textColor="#ff84898f" android:id="@+id/umeng_socialize_second_area_title" android:paddingLeft="26dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="分享到" android:layout_below="@+id/umeng_socialize_first_area"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/umeng_socialize_second_area" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/umeng_socialize_second_area_title" android:layout_centerInParent="true"/>
            </RelativeLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>
